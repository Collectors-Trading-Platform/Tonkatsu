	<div class="container">
    <div>
        <div class="container">
            <h1 class="display-4">Customers</h1>
            <p class="lead">Supermarket Tonkatsu Database</p>
        </div>
        <ul class="attrlist">
            <li class="attributes">Customer ID</li>
            <li class="attributes">First name</li>
            <li class="attributes">Last name</li>
            <li class="attributes">Gender</li>
            <li class="attributes">Hometown</li>

    </div>
    </div>
</div>

<br>
<br>


  <div>
  <form id="addcustomer" action="/customers" method="post">
    <div>
      <div class="fields">
        <div class="field">
          <label>First Name: </label>
          <input type="text" name="cFirstName">
        </div>
      </div>

      <div class="field">
        <label>Last Name: </label>
        <input type="text" name="cLastName">
      </div>

      <div class="field">
        <label>gender: </label>
        <input type="text" name="gender">
      </div> 
      <div class="field">
        <label>Hometown: </label>
        <select name="hometown">
            <option value="Brooklyn">Brooklyn</option>
            <option value="SF">San Francisco</option>
            <option value="LA">Los Angeles</option>
            <option value="Boston">Boston</option>
            <option value="Orl">Orlando</option>
        </select>
      </div>
    <div>
 <input type="submit" value="Submit">

</form>

</div>
<form id='filter_customers' action='/filter/:hometown' method='get'>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by hometown </label>
    <select id='hometown_filter' name="hometown"> 
        {{#each hometowns}}
        <option value="{{hometown}}">{{hometown}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterCustomersByHometown()">
</form>
<div>
<form>
	<div class="field">
	 <label>Customer First Name: </label>
	 <input name="customerFirstName" type="text">
	</div>
	<button type="button">Search</button>
  </form>
   </div>
 <table>
    <thead>
      <th>Customer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th>Hometown</th>
    </thead>
    <tbody>
      {{#each customers}}
      <tr>
          <td>{{cid}}</td>
          <td>{{cFirstName}}</td>
          <td>{{cLastName}}</td>
          <td>{{gender}}</td>
	  <td>{{hometown}}</td>
	  <td><button onclick="deleteCustomer()">Delete</button></td>
	  <td><button>Update</button></td>
      </tr>
      {{/each}}

    </tbody>
  </table>


</main>

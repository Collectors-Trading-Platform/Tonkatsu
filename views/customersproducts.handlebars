	</ol>

        <div class="container">
            <h1 class="display-4">Customer Purchase History</h1>
            <p class="lead">Supermarket Tonkatsu Database</p>
        </div>
  
</div>
<br>

  <div>
<h3>Add a Customer Purchase</h3>

  <form action="/customersproducts" method="post">
Customer: <select name="customer_id"> 
        {{#each customers}}
        <option value="{{cid}}">{{cFirstName}} {{cLastName}}</option>
        {{/each}}
    </select><br>


Product: <select name="product_id"> 
        {{#each products}}
        <option value="{{pid}}">{{pName}}</option>
        {{/each}}
    </select><br>
        
<button type="submit">Submit</button>
  </form>
  </div>

  <table>
    <thead>
      <th>Customer Name</th>
      <th>Product Purchased</th>
    </thead>
    <tbody>
      {{#each customer_product}}
      <tr>
	  <td>{{cFirstName}} {{cLastName}}</td>
          <td>{{pName}}</td>
<form id='delete_customerproduct' action='/:cpid' method='delete'>
	  <td><button onclick="deleteCustomerProduct({{cpid}})">Delete</button></td>
</form>

      </tr>
      {{/each}}

    </tbody>
  </table>

</main>

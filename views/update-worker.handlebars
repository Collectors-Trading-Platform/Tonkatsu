<html>


<h1>Update {{wFirstName}} {{wLastName}} {{job}} {{email}} {{location}} {{wSection}}:</h1>

<form id="update-worker" action="/updateworker" method="post">
    First Name: <input type="text" name="wFirstName" value="{{workers.wFirstName}}"><br>
    Last Name: <input type="text" name="wLastName" value="{{workers.wLastName}}"><br>
    Job: <input type="text" name="job" value="{{workers.job}}"><br>
    Email: <input type="text" name="email" value="{{workers.email}}"><br>
    
    Location: <select name="location" id="location-selector"> 
        {{#each locations}}
        <option value="{{lid}}">{{city}}</option>
        {{/each}}
    </select><br>

    Section: <select name="wSection" id="section-selector"> 
        {{#each sections}}
        <option value="{{sid}}">{{sname}}</option>
        {{/each}}
    </select><br>


</form>
<button onclick="updateWorker({{workers.wid}})">Update</button>

<script defer>selectLocation({{workers.location}});</script>
<script defer>selectSection({{workers.wSection}});</script>

</html>

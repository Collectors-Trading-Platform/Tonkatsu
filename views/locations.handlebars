<br>
<h3>Add Location</h3>

  <div>

  <form action="/locations" method="post">
    <div>
      <div class="fields">
        <div class="field">
          <label>City: </label>
          <input name="city" type="text">
        </div>
      </div>

      
<button type="submit">Submit</button>
</div>
</form>
  </div>

  <table>
    <thead>
      <th>Location ID</th>
      <th>City</th>
    </thead>
    <tbody>
      {{#each locations}}
      <tr>
          <td>{{lid}}</td>
          <td>{{city}}</td>
<form id='delete_location' action='/:lid' method='delete'>
	  <td><button onclick="deleteLocation({{lid}})">Delete</button></td>
</form>
	  <td><button href="/locations/{{lid}}">Update</button></td>
      </tr>
      {{/each}}

    </tbody>
  </table>

</main>

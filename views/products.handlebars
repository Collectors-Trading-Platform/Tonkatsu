<main>

  <div>

  <form action="/products" method="post">
    <div>
      <div class="fields">
        <div class="field">
          <label>Product Name: </label>
          <input name="pName" type="text" required="required">
        </div>
      </div>

      <div class="field">
        <label>Price: </label>
        <input name="price" type="number" required="required" step=".01">
      </div>

      <div class="field">
        <label>Section: </label>
        <input name="pSection" type="text" required="required">
      </div> 
      <div class="field">
        <label>Quantity: </label>
        <input name="quantity" type="number" required="required">
      </div>

 <button type="submit">Submit</button>
    </div>
  </form>
  </div>
 <table>
    <thead>
      <th>Product ID</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Section</th>
      <th>Quantity</th>
    </thead>
    <tbody>
      {{#each getProducts}}
      <tr>
          <td>{{pid}}</td>
          <td>{{pName}}</td>
          <td>{{price}}</td>
          <td>{{pSection}}</td>
	  <td>{{quantity}}</td>
      </tr>
      {{/each}}

    </tbody>
  </table>

</main>
